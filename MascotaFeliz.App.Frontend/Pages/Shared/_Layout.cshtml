<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] MascotaFeliz</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/estilo.css">
    <link rel="stylesheet" href="~/bootstrap/css/bootstrap.min.css">
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <h4><a class="navbar-brand">MascotaFeliz</a></h4>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Inicio</a>
                        </li>
                        <div class="dropdown">
                            <a class="nav-link text-dark" href="#" role="button" data-bs-toggle="dropdown"
                                aria-expanded="false">Dueño</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="../Duenos/AddDueno">Agregar</a></li>
                                <li><a class="dropdown-item" href="../Duenos/ListaDuenos">Lista</a></li>
                            </ul>
                        </div>
                        <div class="dropdown">
                            <a class="nav-link text-dark" href="#" role="button" data-bs-toggle="dropdown"
                                aria-expanded="false">Mascota</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="../Mascotas/AddMascotas">Agregar</a></li>
                                <li><a class="dropdown-item" href="../Mascotas/ListaMascotas">Lista</a></li>
                            </ul>
                        </div>
                        <div class="dropdown">
                            <a class="nav-link text-dark" href="#" role="button" data-bs-toggle="dropdown"
                                aria-expanded="false">Veterinarios</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="../Veterinarios/AddVeterinario">Agregar</a></li>
                                <li><a class="dropdown-item" href="../Veterinarios/ListaVeterinarios">Lista</a></li>
                            </ul>
                        </div>
                        <div class="dropdown">
                            <a class="nav-link text-dark" href="#" role="button" data-bs-toggle="dropdown"
                                aria-expanded="false">Visitas PyP</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="../VisitasPyP/CrearVisitasPyp">Crear visita</a></li>
                                <li><a class="dropdown-item" href="../VisitasPyP/ListaVisitasPyP">Lista</a></li>
                            </ul>
                        </div>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - MascotaFeliz - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>

</html>
