@page
@model MascotaFeliz.App.Frontend.Pages.EditarVisitasPyPModel
@{
    <div class="container">
        <h4>Editar Visitas</h4>
        <form class="row g-3" method="post">
            <input type="hidden" asp-for="visitaPyP.Id" />
            <div class="col-6" id="name-form">
                <label class="form-label" asp-for="visitaPyP.FechaVisita"></label>
                <input asp-for="visitaPyP.FechaVisita" class="form-control" placeholder=" Fecha de visita">
            </div>
            <div class="col-6" id="name-form">
                <label class="form-label" asp-for="visitaPyP.Temperatura"></label>
                <input asp-for="visitaPyP.Temperatura" class="form-control" placeholder=" Temperatura">
            </div>
            <div class="col-6" id="name-form">
                <label class="form-label" asp-for="visitaPyP.Peso"></label>
                <input asp-for="visitaPyP.Peso" class="form-control" placeholder="Peso">
            </div>
            <div class="col-6" id="name-form">
                <label class="form-label" asp-for="visitaPyP.FrecuenciaRespiratoria"></label>
                <input asp-for="visitaPyP.FrecuenciaRespiratoria" class="form-control"
                    placeholder="Frecuencia respiratoria">
            </div>
            <div class="col-6" id="name-form">
                <label class="form-label" asp-for="visitaPyP.FrecuenciaCardiaca"></label>
                <input asp-for="visitaPyP.FrecuenciaCardiaca" class="form-control" placeholder="Frecuencia cardiaca">
            </div>
            <div class="col-6" id="name-form">
                <label class="form-label" asp-for="visitaPyP.EstadoAnimo"></label>
                <input asp-for="visitaPyP.EstadoAnimo" class="form-control" placeholder="Estado de animo">
            </div>
            <div class="col-6" id="name-form">
                <label class="form-label" asp-for="visitaPyP.Recomendaciones"></label>
                <input asp-for="visitaPyP.Recomendaciones" class="form-control" placeholder="Recomendaciones">
            </div>
            <div class="row g-3">
                <div class="col-1">
                    <button type="submit" class="btn btn-secondary">Guardar</button>
                </div>
                <div class="col-2">
                    <a asp-page="./ListaVisitasPyP" class="btn btn-secondary">Volver a la lista </a>
                </div>
            </div>
        </form>
    </div>
}