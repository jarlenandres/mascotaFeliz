@page
@model MascotaFeliz.App.Frontend.Pages.ListaMascotasModel
@{
}

<body>

    <div class="container">
        <h4>Listado de mascotas</h4>
        <div class="row g-3">
            <!--BUSCADOR-->
            <div class="col-5">
                <input class="form-control" type="text" placeholder="Buscar.." name="buscar">
            </div>
            <div class="col">
                <button class="btn btn-secondary" type="submit">Buscar</i></button>
            </div>
            <!--BUSCADOR FIN-->
            <table class="table table-striped table-hover">
                <div class="col">
                    <tr>
                        <th>Nombre</th>
                        <th>Raza</th>
                    </tr>
                </div>
                @foreach (var mascota in Model.listaMascotas)
                {
                    <tr class="table-light">
                        <td>@mascota.Nombre</td>
                        <td>@mascota.Raza</td>
                        <td>
                            <a class="btn btn-secondary" asp-page="./DetallesMascota" asp-route-idMascota="@mascota.Id">
                                detalles
                            </a>
                        </td>
                        <td>
                            <a class="btn btn-secondary" asp-page="./EditarMascota" asp-route-idMascota="@mascota.Id">
                                Editar
                            </a>
                        </td>
                        <td>
                            <a class="btn btn-secondary" asp-page="./DeleteMascota" asp-route-idMascota="@mascota.Id">
                                Historia
                            </a>
                        </td>
                        <td>
                            <a class="btn btn-secondary" asp-page="./DeleteMascota" asp-route-idMascota="@mascota.Id">
                                Eliminar
                            </a>
                        </td>
                    </tr>
                }
            </table>
            <div class="col">
                <a class="btn btn-secondary" asp-page="./EditarMascota">
                    Agregar mascota
                </a>
            </div>
        </div>
    </div>

</body>