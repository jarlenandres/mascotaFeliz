@page
@model MascotaFeliz.App.Frontend.Pages.ListaVeterinariosModel
@{
}

<div class="containet">
    <h4>Listado de veterinarios</h4>
    <div class="row g-3">
        <!--BUSCADOR-->
        <div class="col-5">
            <input class="form-control" type="text" placeholder="Buscar.." name="buscar">
        </div>
        <div class="col">
            <button class="btn btn-secondary" type="submit">Buscar</i></button>
        </div>
        <!--BUSCADOR FIN-->
        <table class="table table-striped table-hover">
            <div class="col">
                <tr>
                    <th>Nonbre</th>
                    <th>Apellidos</th>
                    <th>Tarjeta profesional</th>
                </tr>
            </div>
            @foreach (var veterinario in Model.listaVeterinarios)
            {
                <tr class="table-light">
                    <td>@veterinario.Nombres</td>
                    <td>@veterinario.Apellidos</td>
                    <td>@veterinario.TarjetaProfesional</td>

                    <td>
                        <a class="btn btn-secondary" asp-page="./DetallesVeterinario"
                        asp-route-idVeterinario="@veterinario.Id">
                            Ver detalle
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-secondary" asp-page="./EditarVeterinario"
                        asp-route-idVeterinario="@veterinario.Id">
                            Editar
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-secondary" asp-page="./DeleteVeterinario"
                        asp-route-idVeterinario="@veterinario.Id">
                            Eliminar
                        </a>
                    </td>
                </tr>
            }
        </table>
        <div class="col">
            <a class="btn btn-secondary" asp-page="./AddVeterinario">
                Agregar veterinario
            </a>
        </div>
    </div>
</div>