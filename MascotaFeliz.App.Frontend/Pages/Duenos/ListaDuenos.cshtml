@page
@model MascotaFeliz.App.Frontend.Pages.ListaDuenosModel
@{
}

<div class="container">
    <h4>Listado de dueños</h4>
    <div class="row g-3">
        <!--BUSCADOR-->
        <div class="col-5">
            <input class="form-control" type="text" placeholder="Buscar.." name="buscar">
        </div>
        <div class="col">
            <button class="btn btn-secondary" type="submit">Buscar</button>
        </div>
        <!--BUSCADOR FIN-->
        <table class="table table-striped table-hover">
            <div class="col">
                <tr>
                    <th>Nombre</th>
                    <th>Apellidos</th>
                </tr>
            </div>
            @foreach (var dueno in Model.listaDuenos)
            {
                <tr class="table-light">
                    <td>@dueno.Nombres</td>
                    <td>@dueno.Apellidos</td>
                    <td>
                        <a class="btn btn-secondary" asp-page="./DetallesDueno" asp-route-idDueno="@dueno.Id">
                            Detalles
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-secondary" asp-page="./EditarDueno" asp-route-idDueno="@dueno.Id">
                            Editar
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-secondary" asp-page="./DeleteDueno" asp-route-idDueno="@dueno.Id">
                            Eliminar
                        </a>
                    </td>
                </tr>
            }
        </table>
        <div class="col">
            <a class="btn btn-secondary" asp-page="./AddDueno">
                Agregar dueño
            </a>
        </div>
    </div>
</div>